# --- Wallet & RPC ---
# Your Solana Wallet Private Key (Base58 string)
PRIVATE_KEY=

# Helius (Recommended) or other high-speed RPC URL
PRIMARY_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# --- Trading Mode ---
# true = Simulation (No Real Money), false = Real Trading
ENABLE_PAPER_TRADING=true

# --- Telegram Notifications (Optional but Recommended) ---
# Create a bot via @BotFather
TELEGRAM_BOT_TOKEN=
# Get your ID via @userinfobot
TELEGRAM_CHAT_ID=

# --- Strategy Parameters ---
# Buy Amount in SOL
POSITION_SIZE_SOL=0.1
# Max positions to hold at once
MAX_CONCURRENT_POSITIONS=3

# --- Risk Management ---
# Take Profit (e.g., 0.5 = 50% gain)
TAKE_PROFIT_PERCENT=0.5
# Stop Loss (e.g., 0.15 = 15% loss)
STOP_LOSS_PERCENT=0.15
# Trailing Stop Activation (e.g., 0.3 = 30% gain triggers trailing)
TRAILING_STOP_START=0.3

# --- Execution Speed ---
# Priority Fee in Lamports (Very High for Speed)
PRIORITY_FEE=100000
# Slippage in BPS (100 = 1%)
SLIPPAGE_BPS=200
